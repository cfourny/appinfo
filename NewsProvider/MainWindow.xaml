<Window x:Class="Daily_News.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Daily_News"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,394,0,0">
        <StackPanel Margin="10,-384,10,10">
            <TextBox x:Name="SearchTextBox" Width="300" Margin="0,0,10,10" />
            <Button x:Name="load" Content="Load" Click="ButtonLoadArticles_Click"/>
            <ListView x:Name="ListViewArticles" SelectionMode="Single">
                <ListView.View>
                    <GridView>
                        
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="150"/>
                        <GridViewColumn Header="Link" DisplayMemberBinding="{Binding Url}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
            
        </StackPanel>

    </Grid>
</Window>
